doctype html
html(lang='pt-br')
  head
    meta(charset='utf-8')
    meta(name='description', content='This is a simple game in HTML5 without canvas feature, only for testing game experience with web speech API')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')
    meta(name='format-detection', content='telephone=no')

    //- Title
    //- ===================================
    title Akeime Voice Game

    //- Favicon and SVG logo
    //- ===================================
    link(rel='shortcut icon', href='assets/img/favicon.ico')
    link(rel='logo', type='image/svg', href='assets/img/logo.svg')

    //- Stylesheet and fonts are placed after body for performance reasons
    //- Scripts are places at the end of body for performance reasons

  body
    nav.menu
      span.menu__title Menu

    div.background
      img.background__cloud.background__cloud__1(src='assets/img/cloud-1.svg')
      img.background__cloud.background__cloud__2(src='assets/img/cloud-2.svg')

      img.background__island.background__island__1(src='assets/img/island-1.svg')
      img.background__island.background__island__2(src='assets/img/island-2.svg')
      
      div.background__horizon

    div.ground


    //- JS scripts
    //- ===================================
    script(async, src='assets/js/index.min.js')

  //- Stylesheet and fonts
  //- ===================================
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=VT323')
  link(rel='stylesheet', href='assets/css/style.css')



